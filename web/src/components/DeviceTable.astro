---
import { BackendService } from "../services/backendservice";

const backendservice = new BackendService();

const deviceResult: any[] | undefined = await backendservice.get("device");
const devices = deviceResult ?? [];
console.warn(devices)

const lastQueryTimeResult: string | undefined = await backendservice.get("monitor/lastquerytime");
const lastQueryTime = lastQueryTimeResult ?? '';
console.warn(lastQueryTime)

---

<table class="striped">
    <thead>
        <th>Name</th>
        <th>Device Name</th>
        <th>Connected</th>
        <th>Device Type</th>
        <th>Notify</th>
    </thead>
    <tbody>
        {devices.map((device) => 
            <tr>
            <td>{device.friendly_name}</td>
            <td>{device.device_name}</td>
            <td>
                {(device.last_connected_date == lastQueryTime) ? <span>üü¢</span> : <span>{device.last_connected_date}</span>}
            </td>
            <td>{device.device_type}</td>
            <td>{(device.notify_on_connect) ? <span>‚úî</span> : <span>‚ùå</span>}</td>
        </tr>
        )}
    </tbody>
</table>

<style>
    tr, td, th {
    padding: 0rem;
    text-align: center;
}
</style>

